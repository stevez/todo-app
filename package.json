{
  "name": "todo-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--inspect=9229 INSTRUMENT_CODE=true next dev",
    "build": "next build",
    "build:local": "rimraf dist && cross-env INSTRUMENT_CODE=true next build",
    "start": "next start",
    "start:local": "cross-env NODE_OPTIONS=--inspect=9230 next start",
    "start:integration": "concurrently \"npm run start:local\" \"npm run mock\"",
    "playwright-test": "playwright test",
    "integration-test": "start-server-and-test 'npm run start:integration' http-get://localhost:3000 'npm run playwright-test'",
    "lint": "next lint",
    "mock": "nodemon --watch mock-data mock-data/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lcov:unit": "open-cli coverage/unit/lcov-report/index.html",
    "lcov:integration": "open-cli coverage/integration/lcov-report/index.html",
    "lcov": "open-cli coverage/lcov-report/index.html",
    "coverage:merge": "istanbul-merge --out ./coverage/coverage-final.json coverage/unit/coverage-final.json coverage/integration/coverage-final.json && nyc report --reporter=lcov --reporter=text --reporter=html -t coverage --report-dir coverage"
  },
  "dependencies": {
    "@babel/runtime": "^7.26.0",
    "istanbul-merge": "^2.0.0",
    "next": "15.2.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.4.0",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-react": "^7.27.1",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.49.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "babel-jest": "^30.2.0",
    "babel-plugin-istanbul": "^7.0.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "daisyui": "^4.12.23",
    "endpoint-response-override": "^1.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.1.3",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "json-server": "^0.17.4",
    "monocart-reporter": "^2.9.12",
    "nodemon": "^3.1.9",
    "nyc": "^17.1.0",
    "open-cli": "^8.0.0",
    "postcss": "^8",
    "rimraf": "^6.0.1",
    "start-server-and-test": "^2.0.9",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
